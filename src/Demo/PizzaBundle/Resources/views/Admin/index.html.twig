{% extends 'DemoPizzaBundle::layout-admin.html.twig' %}

{% block container %}
    <div class="page-header">
        <h1>Admin</h1>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table id="orders" class="table table-condensed table-hover">
                <thead>
                    <tr>
                        <th class="col-md-1 {% if pagination.isSorted('o.id') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Order', 'o.id') }}
                        </th>
                        <th class="col-md-2">Name</th>
                        <th class="col-md-2 {% if pagination.isSorted('c.phone') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Phone', 'c.phone') }}
                        </th>
                        <th class="col-md-2 {% if pagination.isSorted('c.address') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Address', 'c.address') }}
                        </th>
                        <th class="col-md-1 {% if pagination.isSorted('o.ingredient1') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Ingr1', 'o.ingredient1') }}
                        </th>
                        <th class="col-md-1 {% if pagination.isSorted('o.ingredient2') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Ingr2', 'o.ingredient2') }}
                        </th>
                        <th class="col-md-1 {% if pagination.isSorted('o.ingredient3') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Ingr3', 'o.ingredient3') }}
                        </th>
                        <th class="col-md-1 {% if pagination.isSorted('s.size') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Size', 's.size') }}
                        </th>
                        <th class="col-md-1 {% if pagination.isSorted('o.delivered') %}sorted{% endif %}">
                            {{ knp_pagination_sortable(pagination, 'Delivered', 'o.delivered') }}
                        </th>                  
                    </tr>
                </thead>
                <tbody>
                    {% for order in pagination %}
                        <tr>
                            <td class="col-md-1">{{ order.id }}</td>
                            <td class="col-md-2">{{ order.firstname|capitalize }} {{ order.lastname|capitalize }}</td>
                            <td class="col-md-2">{{ order.phone }}</td>
                            <td class="col-md-2">{{ order.address|capitalize }}</td>
                            <td class="col-md-1">{% if order.ingredient1 == true %}Yes{% else %}No{% endif %}</td>
                            <td class="col-md-1">{% if order.ingredient2 == true %}Yes{% else %}No{% endif %}</td>
                            <td class="col-md-1">{% if order.ingredient3 == true %}Yes{% else %}No{% endif %}</td>
                            <td class="col-md-1">{{ order.size|capitalize }}</td>
                            <td class="col-md-1">{% if order.delivered == true %}Yes{% else %}No{% endif %}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table><!-- /orders -->
        </div>
    </div>
                    
    <!-- Pagination Navigation -->
    <div id="orders-pagination" class="row">
        <div class="col-md-12 navigation">
            {{ knp_pagination_render(pagination, 'DemoPizzaBundle:Admin:paginator.bootstrap.html.twig') }}
        </div><!-- /.navigation -->
    </div>
{% endblock %}