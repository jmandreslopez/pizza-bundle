{% extends 'DemoPizzaBundle::layout.html.twig' %}

{% block content %}
    <div id="order-step1" class="banner">
        <img src="{{ asset('bundles/demopizza/images/step1.png') }} " alt="Step1" width="175" height="182" />
    </div>
    {{ form_start(form) }}
        <div class="row top-row">
            <div class="col-md-2 col-md-offset-5">
                {{ form_widget(form.phone, {'attr': {'class': 'form-control text-center'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center errors">
                {{ form_errors(form.phone) }}
                {{ form_errors(form) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-2 col-md-offset-5 text-center submit">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}