{% extends '::base.html.twig' %}

{% block title %}Dante's Pizza{% endblock %}
{% block head %}
    <!-- Styles -->
    <link rel="stylesheet" href="{{ asset('bundles/demopizza/css/bootstrap.min.css') }}"  />
    <link rel="stylesheet" href="{{ asset('bundles/demopizza/css/styles.css') }}"  />

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
