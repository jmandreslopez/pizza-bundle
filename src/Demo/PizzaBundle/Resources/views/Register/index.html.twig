{% extends 'DemoPizzaBundle::layout.html.twig' %}

{% block content %}
    <div id="register" class="banner">
        <img src="{{ asset('bundles/demopizza/images/register.png') }} " alt="Register" width="176" height="181" />
    </div>
    {{ form_start(form) }}
        <div class="row top-row">
            <div class="col-md-4 col-md-offset-4 text-center">
                {{ form_label(form.firstname) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.firstname, {'attr': {'class': 'form-control text-center'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                {{ form_label(form.lastname) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.lastname, {'attr': {'class': 'form-control text-center'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                {{ form_label(form.phone) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.phone, {'attr': {'class': 'form-control text-center'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4 text-center">
                {{ form_label(form.address) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                {{ form_widget(form.address, {'attr': {'class': 'form-control text-center'}}) }}
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-center submit">
                {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}